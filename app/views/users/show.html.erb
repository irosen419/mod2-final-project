<h1> <%= @user.username %>'s Posts </h1>

<div id='posts'>
    <% @user.posts.each do |post| %>
        <div class='post'>
            <%= link_to (image_tag(post.image.url) if post.image.exists?), post_path(post) %>
        </div>
    <% end %>
</div>

<%= button_to "Delete Account", @user, method: :delete %>