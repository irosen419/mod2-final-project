<div class="container new-post">
  <h3 class="display-4 text-center mt-5">How would you like to edit?</h3>
  <div id="new-post-form">
    <%= form_for @post, html: {class: "was-validated"} do |f| %>
      <div class="mt-3 mb-3">
        <%= f.text_area :description, placeholder: "Write a caption...", class: "form-control is-invalid" %>
        <div class="invalid-feedback">
          <%= @post.errors[:description].join if @post.errors[:description].any? %>
        </div>
      </div>

      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
