<h1 class="text-center display-4 mt-5"> #<%=@tag.name%> </h1>

<div class="container mt-5">
    <div class="row">
    <% @tag.posts.each do |post| %>
        <% if post.image.exists? %>
            <div class="col-sm-4 mb-4">
                <%= link_to image_tag(post.image.url, class: "card-img-top show"), post_path(post) %>
            </div>
        <% end %>
    <% end %>
    </div>
</div>